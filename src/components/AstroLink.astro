---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
  href: string;
}

const { href, ...rest } = Astro.props;
---

<a
  href={href}
  {...rest}
  class="bg-text text-bkg max-w-fit py-4 px-10 font-black uppercase tracking-wider focus:outline-none focus-visible:ring-4 ring-text ring-offset-2 ring-offset-bkg transition-all hover:opacity-80"
>
  <slot />
</a>
